{
  "name": "console_loader",
  "version": "1.0.4",
  "description": "Console App Loader",
  "author": "OpenRemote",
  "license": "AGPL-3.0-or-later",
  "private": true,
  "scripts": {
    "clean": "npx shx rm -rf dist",
    "modelBuild": "npx orutil build",
    "modelWatch": "npx orutil watch",
    "build": "npx tsc -b -f && npx cross-env NODE_OPTIONS=--max_old_space_size=4096 webpack --mode production",
    "serve": "npx cross-env NODE_OPTIONS=--max_old_space_size=4096 webpack serve --host 0.0.0.0 --mode development",
    "watch": "npx tsc -b -w",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@openremote/or-app": "^1.0.4"
  },
  "devDependencies": {
    "@openremote/util": "^1.0.4",
    "tslint": ">=5.11.0",
    "typescript": ">=4.5.2",
    "webpack": "^5.64.3",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.5.0"
  }
}
